<p style="color: green"><%= notice %></p>
  <div id='main'>
    <div id="weather-forecast">
      <table>
        <thead>
          <tr id="icons">
            <th>ID</th>
            <th colspan="3">Weather Icons</th>
            <th>WK Condition</th>
            <th colspan="2">OWM Icons</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th></th>
            <th>Day</th>
            <th>Night</th>
            <th>Neutral</th>
            <th></th>
            <th>Day</th>
            <th>Night</th>
          </tr>
        <% Place::ICON_ID.each do |condition, code| %>
          <tr class="forecast-item">
            <% options = ['select', 'bypass'] %>
            <% css = Place::NEUTRAL.include?(code) ? options : options.reverse %>
            <td><%= code %>&nbsp;</td>
            <td class="bigger <%= css.last %>"><i class='wi wi-owm-day-<%= code %>'></i></td>
            <td class="bigger <%= css.last %>"><i class='wi wi-owm-night-<%= code %>'></i></td>
            <td class="bigger <%= css.first %>"><i class='wi wi-owm-<%= code %>'></i></td>
            <td>&nbsp;<%= condition %></td>
            <td style=""><%= icon_tag Place.new.icon(condition, true), :review %></td>
            <td style=""><%= icon_tag Place.new.icon(condition, false),:review %></td>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
